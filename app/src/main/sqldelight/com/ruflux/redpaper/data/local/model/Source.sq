import java.lang.Integer;

CREATE TABLE source (
    post_id TEXT NOT NULL,
    url TEXT NOT NULL,
    width INTEGER As Integer NOT NULL,
    height INTEGER As Integer NOT NULL,

    FOREIGN KEY (post_id) REFERENCES post(post_id) ON DELETE CASCADE
);

SelectAllSourceByPost:
SELECT *
FROM source
JOIN post ON post.post_id = source.post_id
WHERE post.post_id = ?;

InsertSource:
INSERT INTO source VALUES (?,?,?,?);

ClearSourceTable:
DELETE FROM source;